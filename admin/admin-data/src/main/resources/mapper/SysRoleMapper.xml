<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.www.myblog.admin.data.mapper.SysRoleMapper">
  <resultMap id="BaseResultMap" type="com.www.myblog.admin.data.entity.SysRoleEntity">
    <!--@Table sys_role-->
    <id column="ROLE_ID" property="roleId" />
    <result column="ROLE_NAME" property="roleName" />
    <result column="DESCRIPTION" property="description" />
    <result column="SYS_UPDATE_TIME" property="sysUpdateTime" />
    <result column="SYS_CREATE_TIME" property="sysCreateTime" />
  </resultMap>
  <!--  表字段-->
  <sql id="Base_Column_List">
    ROLE_ID, ROLE_NAME, DESCRIPTION, SYS_UPDATE_TIME, SYS_CREATE_TIME
  </sql>
  <!--  查询所有角色信息-->
  <select id="findAllRole" resultType="com.www.myblog.admin.data.dto.SysRoleDTO">
    SELECT  ROLE_ID, ROLE_NAME, DESCRIPTION FROM SYS_ROLE
  </select>
</mapper>