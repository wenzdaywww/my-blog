<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.www.myblog.admin.data.mapper.SysUserMapper">
  <resultMap id="BaseResultMap" type="com.www.myblog.admin.data.entity.SysUserEntity">
    <!--@mbg.generated-->
    <!--@Table sys_user-->
    <id column="SU_ID" property="suId" />
    <result column="USER_ID" property="userId" />
    <result column="USER_NAME" property="userName" />
    <result column="PASS_WORD" property="passWord" />
    <result column="PHONE_NUM" property="phoneNum" />
    <result column="BIRTHDAY" property="birthday" />
    <result column="SEX" property="sex" />
    <result column="PHOTO" property="photo" />
    <result column="E_MAIL" property="eMail" />
    <result column="BRIEF" property="brief" />
    <result column="STATE_CD" property="stateCd" />
    <result column="NOT_EXPIRED" property="notExpired" />
    <result column="NOT_LOCKED" property="notLocked" />
    <result column="CREDENTIALS_NOT_EXPIRED" property="credentialsNotExpired" />
    <result column="SYS_UPDATE_TIME" property="sysUpdateTime" />
    <result column="SYS_CREATE_TIME" property="sysCreateTime" />
  </resultMap>

  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    SU_ID, USER_ID, USER_NAME, PASS_WORD, PHONE_NUM, BIRTHDAY, SEX, PHOTO, E_MAIL,BRIEF, STATE_CD,
    SYS_UPDATE_TIME, SYS_CREATE_TIME
  </sql>

  <!--  查询用户拥有的角色信息-->
  <select id="findUserRole" resultType="com.www.myblog.admin.data.entity.SysRoleEntity">
    SELECT R.ROLE_ID, R.ROLE_NAME, R.DESCRIPTION, R.SYS_UPDATE_TIME, R.SYS_CREATE_TIME FROM SYS_USER_ROLE UR,SYS_ROLE R
    WHERE UR.ROLE_ID = R.ROLE_ID AND UR.USER_ID = #{userId}
  </select>

</mapper>